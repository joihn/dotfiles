alias clean_repo="find . -type d -name '__pycache__' -exec rm -r {} + && sudo find . -type d -name '*.egg-info' && sudo find . -type d -name '*.eggs' -exec rm -rf {} + && find . -type d -empty -delete"

journalsubl() {
  journalctl -k --since today |uniq | col -b > /tmp/ls_man.txt && subl /tmp/ls_man.txt
}

gosubl() {
  cat | col -b > /tmp/ls_man.txt && subl /tmp/ls_man.txt
}


