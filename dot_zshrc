prompt_context() {
    if [[ $(hostname) == "maximeComputer" ]]; then
      HOSTNAME_RENAMED="yv"
    else
      HOSTNAME_RENAMED=$(hostname)
    fi
    prompt_segment black default "%(!.%{%F{yellow}%}.)${HOSTNAME_RENAMED}"
}
